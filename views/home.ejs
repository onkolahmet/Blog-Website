<p><%= startingContent %></p>

<% posts.forEach(function(post){ %>
    <h1 class="capitalize"><%= post.title %></h1>
    <p>
    <%= post.content.substring(0,100)+ " ..." %>
    <a class="anchor" href="/posts/<%= post._id %>">Read More</a>
    </p>

<% }); %>

